public string FizzBuzz(int number)
{
    if (number % 3 == 0)
    {
        return ("fizz");
    }
    else if (number % 5 == 0)
    {
        return ("buzz");
    }
    else if (number % 5 == 0 && number % 3 == 0)
    {
        return ("fizzbuzz");
    }
    else 
    {
        return ("The number is no divisible by 3 or 5.");
    }
}

